@if(Context.User.Identity.IsAuthenticated)
{
    <ul class="nav navbar navbar-right">
        <li>
            Hello @Context.User.Claims.FirstOrDefault(c => c.Type == "Firstname").Value
          
        </li>
        <li>
               <a class="nav-link text-dark" asp-controller="Auth" asp-action="Logout">Logout</a>
        </li>
    </ul>
}
else
{
    <ul class="nav navbar-nav ">
        <li><a class="nav-link text-dark" asp-controller="Auth" asp-action="Register">Register</a></li>
        <li><a class="nav-link text-dark" asp-controller="Auth" asp-action="Login">Login</a></li>
    </ul>
}