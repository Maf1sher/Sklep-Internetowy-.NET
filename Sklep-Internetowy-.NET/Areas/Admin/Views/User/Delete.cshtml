@model Sklep_Internetowy_.NET.Models.Entity.User

<h1>Delete User</h1>

<form asp-area="Admin" asp-controller="User" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <p>Are you sure you want to delete this user: <strong>@Model.FirstName @Model.LastName</strong>?</p>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-controller="User" asp-area="Admin" class="btn btn-secondary">Cancel</a>
</form>

