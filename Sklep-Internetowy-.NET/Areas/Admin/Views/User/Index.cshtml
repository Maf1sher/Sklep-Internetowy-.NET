@model IEnumerable<Sklep_Internetowy_.NET.Models.Entity.User>

<h1>Manage Users</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>
                    <a class="btn btn-warning" asp-area="Admin" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-danger" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                    <a class="btn btn-secondary" asp-area="Admin" asp-controller="User" asp-action="ChangeRole" asp-route-id="@user.Id">Change Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>
