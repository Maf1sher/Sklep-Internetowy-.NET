@model List<Sklep_Internetowy_.NET.Models.Entity.Order>

@{
    ViewData["Title"] = "Zamówienia";
}

<h2>Zamówienia</h2>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Data złożenia</th>
            <th>Użytkownik</th>
            <th>Liczba produktów</th>
            <th>Łączna kwota</th>
            <th>Status</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.CreatedData</td>
                @if (order.User == null)
                {
                    <td></td>
                }
                else
                {
                    <td>@order.User.FirstName @order.User.LastName</td>
                }
                <td>@order.OrderProducts.Count</td>
               <td>@order.OrderProducts.Sum(p => p.Product.Price * p.Quantity) PLN</td>
                <td>
                    <div class="d-flex justify-content-between">
                        <span>@order.Status?.StatusName</span>

                        @if (order.Status?.StatusName != "Zrealizowane")
                        {
                            <button class="btn btn-info btn-sm" data-bs-toggle="modal" data-bs-target="#statusModal-@order.Id">
                                Zmień status
                            </button>
                        }
                        else
                        {
                            <span class="text-muted">Zrealizowane</span>
                        }
                    </div>

                    <div class="modal fade" id="statusModal-@order.Id" tabindex="-1" aria-labelledby="statusModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="statusModalLabel">Zmień status zamówienia</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form asp-action="UpdateStatus" method="post">
                                    <div class="modal-body">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="orderId" value="@order.Id" />
                                        <label for="statusSelect">Wybierz nowy status:</label>
                                        <select name="statusId" id="statusSelect" class="form-control">
                                            @foreach (var status in ViewBag.OrderStatuses)
                                            {
                                                <option value="@status.Id">@status.StatusName</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                                        <button type="submit" class="btn btn-primary">Zatwierdź</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </td>
                <td>
                    <button class="btn btn-info btn-sm" onclick="toggleDetails(@order.Id)">Szczegóły</button>
                </td>
            </tr>
            <tr id="order-details-@order.Id" class="order-details" style="display:none;">
                <td colspan="7">
                    <div>
                        <h4>Produkty w zamówieniu</h4>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Nazwa</th>
                                    <th>Cena</th>
                                    <th>Ilość</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var product in order.OrderProducts)
                                {
                                    <tr>
                                        <td>@product.Product.Name</td>
                                        <td>@product.Product.Price PLN</td>
                                        <td>@product.Product.Quantity</td>
                                    </tr>
                                } tutaj
                            </tbody>
                        </table>

                       <h4>Łączna kwota: @order.OrderProducts.Sum(p => p.Product.Price * p.Quantity) PLN</h4>  tutaj
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleDetails(orderId) {
            var detailsRow = $("#order-details-" + orderId);
            if (detailsRow.is(":visible")) {
                detailsRow.hide();
            } else {
                detailsRow.show();
            }
        }
    </script>
}
