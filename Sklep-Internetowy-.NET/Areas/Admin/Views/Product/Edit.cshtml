@model Sklep_Internetowy_.NET.Areas.Admin.Models.ProductEditViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header text-center bg-primary text-white">
                    <h5>Edit Product: @Model.Name</h5>
                </div>

                <div class="card-body">
                    <form asp-action="Edit" asp-controller="Product" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Product Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Price (PLN)</label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label">Quantity Available</label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
                        {
                            <div class="mb-3">
                                <img src="@Url.Content("~/")@Model.ExistingImagePath" alt="Product Image" class="img-fluid" />
                            </div>
                        }

                        <div class="form-group">
                            <label>Category</label>
                            <select asp-for="CategoryId" class="form-control">
                                @foreach (var category in Model.CategoriesList)
                                {
                                    <option value="@category.Id">@category.Name</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Product Image</label>
                            <input type="file" asp-for="Image" class="form-control" accept=".jpg, .png" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">Save Changes</button>
                            <a asp-action="Details" asp-controller="Product" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
