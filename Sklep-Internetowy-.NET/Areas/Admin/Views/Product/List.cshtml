@{
}

@model List<Sklep_Internetowy_.NET.Models.Entity.Product>

<div class="d-flex flex">
    <h1 class="col-4">Products</h1>
    <a class="btn btn-primary col-1" asp-controller="Product" asp-action="Add">Add Product</a>
</div>


<div class="d-inline-flex flex-wrap">
    @foreach (var product in Model)
    {
            <div class="card m-2" style="width: 18rem;">
                <img class="card-img-top" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQH8TM33FKNpGXRmA6NEKh8zpKjeLHwfUB8TA&s" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">Price: @product.Price</p>
                </div>
            <a class="stretched-link" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"></a>
            </div>
    }
</div>