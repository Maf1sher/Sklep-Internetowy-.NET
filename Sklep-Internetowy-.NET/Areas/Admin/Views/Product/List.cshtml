@model List<Sklep_Internetowy_.NET.Models.Entity.Product>

<div class="d-flex flex">
    <h1 class="col-4">Products</h1>
    <a class="btn btn-primary col-1" asp-controller="Product" asp-action="Add">Add Product</a>
</div>


<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 col-xl-3 col-xxl-2 col-6 mb-3">
                    <a class="btn btn-danger btn-sm rounded-0 float-end" type="button" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                    <div class="card">
                        <img src="https://dl.memuplay.com/new_market/img/com.innersloth.spacemafia.icon.2024-10-24-12-41-15.png"
                             class="card-img-top" alt="@product.Name" />
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="mb-0">@product.Name</h5>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <h5 class="text-dark mb-0">@product.Price zł</h5>
                            </div>

                            <div class="d-flex justify-content-between mb-2">
                                <p class="text-muted mb-0">Available: <span class="fw-bold">@product.Quantity</span></p>

                            </div>
                        </div>
                        <a class="stretched-link" asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"></a>
                    </div>

                </div>
            }
        </div>
    </div>
</section>