@model Sklep_Internetowy_.NET.Models.Dto.AddProductRequest

<h1 class="text-center mb-4">Add Product</h1>

<div class="container">
    <form method="post" enctype="multipart/form-data" class="p-4 shadow-sm bg-white rounded">
        <div class="mb-3">
            <label class="form-label" for="Name">Name</label>
            <input type="text" id="Name" class="form-control" asp-for="Name" required />
        </div>

        <div class="mb-3">
            <label class="form-label" for="Description">Description</label>
            <textarea id="Description" class="form-control" asp-for="Description" required rows="4"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label" for="Price">Price</label>
            <input type="number" id="Price" class="form-control" asp-for="Price" placeholder="0.00" required name="price" min="0" value="0" step="0.01" title="Currency" pattern="^\d+(?:\.\d{1,2})?$" />
        </div>

        <div class="mb-3">
            <label class="form-label" for="Quantity">Quantity</label>
            <input type="number" id="Quantity" class="form-control" asp-for="Quantity" required />
        </div>

        <div class="form-group">
            <label>Category</label>
            <select asp-for="CategoryId" class="form-control">
                @foreach(var category in Model.CategoriesList)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label" for="Image">Product Image</label>
            <input type="file" id="Image" class="form-control" asp-for="Image" accept="image/*" required />
        </div>

        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-success w-100">Save Product</button>
        </div>
    </form>
</div>
